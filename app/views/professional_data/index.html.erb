<p id="notice"><%= notice %></p>

<h1>Professional Data</h1>

<table>
  <thead>
    <tr>
      <th>Job title</th>
      <th>Started at</th>
      <th>Ended at</th>
      <th>Employee</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @professional_datum.each do |professional_datum| %>
      <tr>
        <td><%= professional_datum.localized_title %></td>
        <td><%= professional_datum.started_at %></td>
        <td><%= professional_datum.ended_at %></td>
        <td><%= link_to professional_datum.employee_id, employee_path(professional_datum.employee_id) %></td>
        <td><%= link_to 'Show', employee_professional_datum_path(@employee, professional_datum) %></td>
        <td><%= link_to 'Edit', edit_employee_professional_datum_path(@employee, professional_datum) %></td>
        <td><%= link_to 'Destroy', [@employee, professional_datum], method: :delete, datum: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

